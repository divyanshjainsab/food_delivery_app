<%= stylesheet_link_tag 'restaurant/dishes/index' %>
<section id="dish-cards">
   <% @dishes.each do |dish| %>
  <div id="box">
    <a href="<%= restaurant_dish_path(dish) %>">
      <%= render "partials/card", locals: { dish: dish } %>
    </a>
    <center>
    <%= debug(dish.id) %>

      <!-- Stimulus Button for Checkout -->
      <button type="button"
              data-controller="payment"
              data-action="click->payment#redirectToCheckout"
              data-redirect-dish-id="<%= dish.id %>">
        Buy Now
      </button>
    </center>
  </div>
<% end %>

</section>
<center><%= render  "partials/back_button" %></center>
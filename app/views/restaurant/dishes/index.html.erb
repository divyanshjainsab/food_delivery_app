<%= stylesheet_link_tag 'restaurant/dishes/index' %>

<header id="header">
    <h1>Dashboard</h1>
    <h1>Welcome, <%= @restaurant.name %></h1>
    <div>
        <%= link_to "Add New Dish", new_restaurant_dish_path, id: "addBtn" %>
        <%= link_to "Orders", restaurant_orders_path, id: "orderBtn" %>
    </div>
</header>
<% if flash[:notice] %>
            <div class="alert alert-info"><%= flash[:notice] %></div>
        <% end %>
<section id="dish-cards">
    <% @restaurant.dishes.each do |dish| %>
        <a href= <%= restaurant_dish_path(dish)%>>
            <%= render "partials/card", locals: { dish: dish} %>
        </a>
    <% end %>
</section>
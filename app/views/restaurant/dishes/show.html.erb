<%= stylesheet_link_tag "restaurant/dishes/show" %>
<%= content_for :title, @dish.name %>

<div class="container">
  <div class="card" style="max-width: 800px; margin: 0 auto;">
   
    <center><%= image_tag @dish.image if @dish.image.persisted? %></center>

    <div class="card-body">
      <h2 class="card-title"><%= @dish.name %></h2>

      <p class="card-text"><%= @dish.description %></p>

      <p class="card-text">
        <strong>Price: </strong> $<%= @dish.price %>
      </p>

      <div style="display: flex; justify-content:space-between; padding: 0 2rem">
        <% if @dish.restaurant.id == @rest_id %>
          <%= link_to "Edit",edit_restaurant_dish_path(@dish), id: "edit-btn" %>
          <%= button_to "Delete Dish", restaurant_dish_path(@dish), form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete, id: "edit-btn", params: { rest_id: @dish.restaurant.id } %>
        <% end%>  
        <%= render "partials/back_button" %>
      </div>
    </div>
  </div>
</div>
